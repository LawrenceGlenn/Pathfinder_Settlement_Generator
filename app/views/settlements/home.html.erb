<div>
  <%= label_tag "name_label", "Settlement Name" %>
  <%= text_field_tag 'name_input', 'Example Name', onkeyup:"updateSettlement(this)", autocomplete: :off %>
  <%= label_tag "population_label", "Population:" %>
  <%= number_field_tag 'population_input', 0, onchange:"updateSettlement(this)", autocomplete: :off %>
  <table>
    <tr>
      <th>Settlement Type</th>
      <th>Population Range</th>
      <th>Recomended Max Qualities</th>
    </tr>
    <tr>
      <td>Thorpe</td>
      <td>Fewer than 20</td>
      <td>1</td>
    </tr>
    <tr>
      <td>Hamlet</td>
      <td>21-60</td>
      <td>1</td>
    </tr>
    <tr>
      <td>Village</td>
      <td>61-200</td>
      <td>2</td>
    </tr>
    <tr>
      <td>Small Town</td>
      <td>201-2,000</td>
      <td>2</td>
    </tr>
    <tr>
      <td>Large Town</td>
      <td>2,001-5,000</td>
      <td>3</td>
    </tr>
    <tr>
      <td>Small City</td>
      <td>5,001-10,000</td>
      <td>4</td>
    </tr>
    <tr>
      <td>Large City</td>
      <td>10,001-25,000</td>
      <td>5</td>
    </tr>
    <tr>
      <td>Metropolis</td>
      <td>More than 25,000</td>
      <td>6</td>
    </tr>
  </table>

  <%= label_tag "alignment_label", "Alignment: " %>
  <%= select_tag 'alignment_input', options_for_select([
    ["Lawful Good", "LG"],
    ["Neutral Good", "NG"],
    ["Chaotic Good", "CG"],
    ["Lawful Neutral", "LN"],
    ["True Neutral", "N"],
    ["Chaotic Neutral", "CN"],
    ["Lawful Evil", "LE"],
    ["Neutral Evil", "NE"],
    ["Chaotic Evil", "CE"],
    ], selected: "N"), onchange: "updateSettlement(this)", autocomplete: :off %>

  <%= label_tag "government_label", "Government: " %>
  <%= select_tag 'government_input', options_for_select([
    ["Autocracy"],
    ["Council"],
    ["Magical"],
    ["Overlord"],
    ["Secret Syndicate"],
    ],selected: "Autocracy"), onchange: "updateSettlement(this)", autocomplete: :off %>

  <div>
    <%= label_tag 'QUALITIES', nil, class: 'qualities',  title: get_qualities_title, 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
    <br/>
    <% get_qualities_checkboxes().each do |name, tooltip| %>
      <%= check_box_tag name.to_s, name.to_s, false, class: 'qualities', onchange: "updateSettlement(this)", autocomplete: :off, title: tooltip.to_s, 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
      <%= label_tag name.to_s, nil, class: 'qualities',  title: tooltip.to_s, 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
    <% end %>
  </div>

  <div>
      <%= label_tag "DISADVANTAGES", nil, class: 'disadvantages',  title: get_disadvantages_title, 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
    <br/>
    <% get_disadvantages_checkboxes().each do |name, tooltip| %>
      <%= check_box_tag name.to_s, name.to_s, false, class: 'disadvantages_checkbox', onchange: "updateSettlement(this)", autocomplete: :off,  title: tooltip.to_s, 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
      <%= label_tag name.to_s, nil, class: 'disadvantages',  title: tooltip.to_s, 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
      <% if name.to_s == "Cursed" %>
        <%= select_tag 'cursed_select', options_for_select([
          ["Corruption"],
          ["Crime"],
          ["Economy"],
          ["Law"],
          ["Lore"],
          ["Society"]
          ]), onchange: "updateSettlement(this)", autocomplete: :off ,  title: tooltip.to_s, 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
      <% end %>
    <% end %>
  </div>


</div>

<div>
  <%= render partial: 'settlement'%>
</div>